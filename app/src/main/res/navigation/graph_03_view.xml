<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_03_view"
    app:startDestination="@id/viewFragment">

    <fragment
        android:id="@+id/viewFragment"
        android:name="com.shakespace.advanceandroid.chapter03view.ViewFragment"
        android:label="fragment_view"
        tools:layout="@layout/fragment_view" >
        <action
            android:id="@+id/action_viewFragment_to_viewMoveFragment"
            app:destination="@id/viewMoveFragment" />
        <action
            android:id="@+id/action_viewFragment_to_animatorFragment"
            app:destination="@id/animatorFragment" />
        <action
            android:id="@+id/action_viewFragment_to_horizontalFragment"
            app:destination="@id/horizontalFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewMoveFragment"
        android:name="com.shakespace.advanceandroid.chapter03view.ViewMoveFragment"
        android:label="fragment_view_move"
        tools:layout="@layout/fragment_view_move" />
    <fragment
        android:id="@+id/animatorFragment"
        android:name="com.shakespace.advanceandroid.chapter03view.AnimatorFragment"
        android:label="AnimatorFragment" />
    <fragment
        android:id="@+id/horizontalFragment"
        android:name="com.shakespace.advanceandroid.chapter03view.HorizontalFragment"
        android:label="fragment_horizontal"
        tools:layout="@layout/fragment_horizontal" />
</navigation>