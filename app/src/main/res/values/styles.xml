<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--        是menu显示在actionBar的下方，使用?attr/actionBarSize也可以，但是位置上似乎有一点偏差-->
<!--        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>-->
            <item name="overlapAnchor">false</item>
            <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>

    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
    </style>

    <!--    <item name="overlapAnchor">false</item>-->
    <!--    <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>-->

    <style name="HomeTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@color/aliceblue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blueviolet</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--    <item name="enterAnim">@anim/act_enter</item>-->
    <!--    <item name="exitAnim">@anim/act_exit</item>-->
    <!--    <item name="popEnterAnim">@anim/act_back_enter</item>-->
    <!--    <item name="popExitAnim">@anim/act_back_exit</item>-->
</resources>
